<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_layout_under_bar">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_main"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/myPageBtn"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainScrollView"
        android:overScrollMode="never"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 프로필 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="30dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/deptProfile"
                    android:scaleType="fitXY"
                    android:background="@drawable/border_layout_profile"
                    android:layout_marginTop="50dp"/>
                <TextView
                    android:id="@+id/profileUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="이름"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/profileUserDept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학과"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 가로 스크롤 뷰 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_marginVertical="50dp">
                <!-- icons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/border_layout_round"
                        android:backgroundTint="#aaaaaa"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/border_layout_round"
                        android:backgroundTint="#aaaaaa"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/border_layout_round"
                        android:backgroundTint="#aaaaaa"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"/>
                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/border_layout_round"
                        android:backgroundTint="#aaaaaa"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"/>

                </LinearLayout>
            </HorizontalScrollView>
            <!--게시판들-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp">
                <!--공지사항-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|bottom"
                            android:id="@+id/noticeDeptText"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/uc_logo"
                            android:text="  공지사항"
                            android:textColor="#00596E"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/border_layout_under_bar" />

                        <TextView
                            android:id="@+id/moreViewNotice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border_layout_under_bar"
                            android:gravity="end|bottom"
                            android:text="더보기 >"
                            android:textSize="14dp" />
                    </LinearLayout>
                    <ListView
                        android:id="@+id/mainNoticeListView"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:overScrollMode="never"/>
                </LinearLayout>
                <!--공지사항 END-->

                <!--자유게시판-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|bottom"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_baseline_people_24"
                            android:text="  자유게시판"
                            android:textColor="@color/Dolphin"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/border_layout_under_bar" />

                        <TextView
                            android:id="@+id/moreViewFreeBoard"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border_layout_under_bar"
                            android:gravity="end|bottom"
                            android:text="더보기 >"
                            android:textSize="14dp" />
                    </LinearLayout>
                    <ListView
                        android:id="@+id/mainFreeBoardListView"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:overScrollMode="never"/>
                </LinearLayout>
                <!-- 자유게시판 END -->
            </LinearLayout>
            <!-- 게시판들 END -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>








