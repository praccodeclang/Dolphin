<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/FreeBoardViewBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="자유게시판"
            android:gravity="center"
            android:textColor="@color/Dolphin"
            />
    </LinearLayout>



    <!--제목과 컨텐츠 표시-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_weight="1">
            <!-- 프로필 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/board_profileLayout"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_dolphins"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/writer"
                        android:text="이름"
                        android:textSize="20sp"
                        android:fontFamily="@font/maplestory_bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/writtenDate"
                        android:text="writtenDate"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 프로필 레이아웃 END-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/board_title"
                android:text="제목부분입니다."
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textIsSelectable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/board_contents"
                android:text="내용부분입니다"
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:singleLine="false"
                android:textIsSelectable="true"/>
            <!--update & deleteBtns-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/udBtns"
                android:orientation="horizontal"
                android:gravity="right"
                android:visibility="gone"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/modifyBtn"
                    android:text="수정"
                    android:textColor="@color/Dolphin"
                    android:backgroundTint="#ffffff"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteBtn"
                    android:text="삭제"
                    android:textColor="@color/warning"
                    android:layout_marginHorizontal="5dp"/>
            </LinearLayout>
            <!-- 댓글 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/commentArea"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/freeBoardCommentListView"
                    android:scrollbars="none"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:listSelector="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingVertical="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/writeCommentEditText"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:background="@drawable/border_layout_basic"
            android:layout_weight="2"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:hint="댓글을 입력해주세요."
            android:textIsSelectable="true"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/writeCommentBtn"
            android:src="@drawable/ic_baseline_send_24"
            android:backgroundTint="@color/Dolphin"
            android:background="@drawable/border_layout_round"
            />
    </LinearLayout>

</LinearLayout>