<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.taewon.dolphin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_dolphins"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/icon_dolphins"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dolphin"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActivityRevise"></activity>
        <!-- activity 추가해주세요. -->
        <activity
            android:name=".ActivityStart"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityLogin" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityRegister" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityMain" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityFreeBoard" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityFreeBoardViewer" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityFreeBoardWriting" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityMyPage" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityNfc" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityCalendar" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityWeather" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityDiet" android:screenOrientation="portrait"/>
        <activity android:name=".ActivitySchoolNotice" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityContact" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityFind" android:screenOrientation="portrait"/>
        <activity android:name=".ActivityService"  android:screenOrientation="portrait"/>
        <activity android:name=".ActivityPrivacyPolicy" android:screenOrientation="portrait"/>
    </application>

</manifest>